<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>
<br>
<br>
<%= form_for @post do |f| %>
<%= f.label "Blogger" %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
<br>
<br>
<%= f.label "Destination" %>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>
<br>
<br>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<br>
<%= f.label :content %><br>
<%= f.text_area :content %>
<br>
<br>
<%= f.hidden_field :likes, :value => 0 %>
<%= f.submit %>
<% end %>